{{#if messages.length}}
    {{#each messages}}
    <div class="message p-2 rounded-2 bg-light">
        <div class="d-flex justify-content-between text-secondary">
            <div class="fs-6">{{email}}</div>
            <div class="fs-6">{{date}}</div>
        </div>
        <div class="w-100">{{name}}: {{text}}</div>
    </div>
    {{/each}}
{{else}}
    <p class="text-secondary p-4">No messages yet...</p>
{{/if}}